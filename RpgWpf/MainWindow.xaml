<Window x:Class="RpgWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPG WPF" Height="500" Width="900" MinWidth="900" MinHeight="500">
    
    
    
    <Grid Margin="10">
        <!-- Hauptaufteilung: 
             Row 0: drei gleich große Felder (Character / Enemy / Shop)
             Row 1: Gegner-Übersicht (alle Monster)
             Row 2: unten links Inventory, unten rechts Buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ======================= -->
        <!--       Row 0: Top        -->
        <!-- ======================= -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Character-Box (links) -->
            <GroupBox Header="Character"
                      Margin="0,0,10,5"
                      Grid.Column="0">
                <StackPanel Margin="10">
                    <!-- Bindings wie bisher, nur englische Beschriftung -->
                    <TextBlock Text="{Binding PlayerTag, StringFormat=Player tag: {0}}"/>
                    <TextBlock Text="{Binding Alter, StringFormat=Age: {0}}" Margin="0,5,0,0"/>

                    <Separator Margin="0,5,0,5"/>

                    <TextBlock Text="{Binding HP, StringFormat=Health Points: {0}}"/>
                    <TextBlock Text="{Binding MaxHP, StringFormat=Max. Health: {0}}"/>
                    <TextBlock Text="{Binding AttackDamage, StringFormat=Attack damage: {0}}" Margin="0,5,0,0"/>

                    <Separator Margin="0,5,0,5"/>

                    <TextBlock Text="{Binding DamageMultiplier, StringFormat=Multiplier (Special): {0}x}"/>
                    <TextBlock Text="{Binding SpecialAttackDamage, StringFormat=Special attack damage: {0}}"/>
                    <TextBlock Text="{Binding SpecialProbability, StringFormat=Special chance: {0:P0}}"/>
                </StackPanel>
            </GroupBox>

            <!-- Enemy-Box (Mitte) -->
            <GroupBox Header="Enemy"
                      Margin="0,0,10,5"
                      Grid.Column="1">
                <StackPanel Margin="10">
                    <!-- Diese Properties bauen wir später in MainWindow / GameEngine ein -->
                    <TextBlock Text="{Binding CurrentEnemyName, StringFormat=Name: {0}}" />
                    <TextBlock Text="{Binding CurrentEnemyHP, StringFormat=HP: {0}}" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding CurrentEnemyMaxHP, StringFormat=Max. HP: {0}}"/>
                    <!-- Optional: später z. B. Attack/Defense anzeigen -->
                    <TextBlock Text="{Binding CurrentEnemyAttack, StringFormat=Attack: {0}}" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Shop-Box (rechts) -->
            <GroupBox Header="Shop"
                      Margin="0,0,0,5"
                      Grid.Column="2">
                <StackPanel Margin="10">
                    <!-- Anzeige – Logik und echte Werte kommen später -->
                    <TextBlock Text="{Binding Coins, StringFormat=Coins: {0}}"/>
                    <Separator Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding AttackDamage, StringFormat=Current attack: {0}}"/>
                    <TextBlock Text="{Binding Defense, StringFormat=Current defense: {0}}"/>
                    <!-- Später können hier z. B. Shop-Beschreibungen / Preise etc. angezeigt werden -->
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- ================================== -->
        <!--       Row 1: Enemy-Übersicht       -->
        <!-- ================================== -->
        <GroupBox Header="Enemies"
                  Grid.Row="1"
                  Margin="0,0,0,5">
            <!-- Horizontale Liste aller Gegner mit Name + HP/MaxHP -->
            <ListBox x:Name="EnemiesList"
                     ItemsSource="{Binding Enemies}"
                     SelectedItem="{Binding SelectedEnemy, Mode=TwoWay}"
                     BorderThickness="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8"
                                Margin="4"
                                CornerRadius="4"
                                BorderBrush="Gray"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock>
                                    <Run Text="HP: "/>
                                    <Run Text="{Binding HP}"/>
                                    <Run Text=" / "/>
                                    <Run Text="{Binding MaxHP}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- ================================== -->
        <!--       Row 2: Inventory + Buttons   -->
        <!-- ================================== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Inventory (links unten) -->
            <GroupBox Header="Inventory"
                      Grid.Column="0"
                      Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Liste aller Items im Inventar -->
                    <ListBox x:Name="InventoryList"
                             ItemsSource="{Binding InventoryItems}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ItemName}" />
                                    <TextBlock Text=" ("/>
                                    <TextBlock Text="{Binding InventarGroesse}"/>
                                    <TextBlock Text=")" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>

            <!-- Buttons (rechts unten) -->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Margin="0,0,0,0">
                <Button x:Name="AttackButton"
                        Content="Attack"
                        Margin="0,0,0,5"
                        Height="30"/>
                <Button x:Name="UsePotionButton"
                        Content="Use potion"
                        Margin="0,0,0,5"
                        Height="30"/>
                <Separator Margin="0,5,0,5"/>
                <Button x:Name="AdminMenuButton"
                        Content="Admin menu"
                        Margin="0,0,0,5"
                        Height="30"/>
                <Button x:Name="ExitButton"
                        Content="Exit game"
                        Height="30"/>
            </StackPanel>
        </Grid>

        <!-- ================================== -->
        <!--   Versteckte Reste für alten Code  -->
        <!--   (damit MainWindow.xaml.cs weiter -->
        <!--    kompiliert, obwohl kein Log    -->
        <!--    mehr sichtbar ist)             -->
        <!-- ================================== -->
        <Grid Visibility="Collapsed">
            <TextBox x:Name="GameLog"/>
            <TextBox x:Name="InputBox"/>
        </Grid>

    </Grid>
</Window>
