<Window x:Class="RPG_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPG WPF" Height="600" Width="900">
    <Grid Margin="10">
        <!-- Spalten: links Charakter, rechts Spielbereich -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Zeilen: oben Status/Log, unten Aktionen/Eingabe -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ========== LINKER BEREICH: CHARAKTER-INFOS ========== -->
        <GroupBox Header="Charakter"
                  Grid.Row="0" Grid.Column="0"
                  Margin="0,0,10,10">
            <StackPanel Margin="10">
                <!-- Diese Bindings werden wir später per ViewModel / Code füttern -->
                <TextBlock Text="{Binding PlayerTag, StringFormat=Playertag: {0}}" />
                <TextBlock Text="{Binding Alter, StringFormat=Alter: {0}}" Margin="0,5,0,0"/>

                <Separator Margin="0,5,0,5"/>

                <TextBlock Text="{Binding HP, StringFormat=Health Points: {0}}" />
                <TextBlock Text="{Binding MaxHP, StringFormat=Max. Health: {0}}" />
                <TextBlock Text="{Binding AttackDamage, StringFormat=Attack damage: {0}}" Margin="0,5,0,0"/>

                <Separator Margin="0,5,0,5"/>

                <TextBlock Text="{Binding DamageMultiplier, StringFormat=Multiplikator (Special): {0}x}" />
                <TextBlock Text="{Binding SpecialAttackDamage, StringFormat=Special Attack damage: {0}}" />
                <TextBlock Text="{Binding SpecialProbability, StringFormat=Wahrscheinlichkeit (Special): {0:P0}}" />
            </StackPanel>
        </GroupBox>

        <!-- ========== RECHTS OBEN: SPIEL-INFOS / SPÄTER OPTIONALER STATUS ========== -->
        <!-- Hier könntest du später Gegner-Infos, Runde, etc. anzeigen -->
        <GroupBox Header="Status"
                  Grid.Row="0" Grid.Column="1"
                  Margin="0,0,0,10">
            <StackPanel Margin="10">
                <TextBlock Text="Hier können später Gegner-Infos, Runde usw. stehen." />
            </StackPanel>
        </GroupBox>

        <!-- ========== MITTE RECHTS: GAME-LOG (Konsolentext) ========== -->
        <TextBox x:Name="GameLog"
                 Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                 Margin="0,0,0,10"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 FontSize="14" />

        <!-- ========== UNTEN: EINGABE + MENÜ-AKTIONEN ========== -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Eingabezeile wie Konsolenbefehl -->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        VerticalAlignment="Center">
                <TextBlock Text="Befehl:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="InputBox"
                         Width="250"
                         FontFamily="Consolas"
                         FontSize="14"
                         Margin="0,0,10,0"/>
                <Button Content="Enter"
                        Width="80"
                        Click="EnterButton_Click"/>
            </StackPanel>

            <!-- Menü-Buttons aus deinem AnfangsText -->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        HorizontalAlignment="Right">
                <Button Content="Inventar"
                        Margin="5,0"
                        Click="InventarButton_Click"/>
                <Button Content="Goblin angreifen"
                        Margin="5,0"
                        Click="GoblinButton_Click"/>
                <Button Content="Elfe angreifen"
                        Margin="5,0"
                        Click="ElfeButton_Click"/>
                <Button Content="Werwolf angreifen"
                        Margin="5,0"
                        Click="WerwolfButton_Click"/>
                <Button Content="Potion verwenden"
                        Margin="5,0"
                        Click="PotionButton_Click"/>
                <Button Content="Admin"
                        Margin="5,0"
                        Click="AdminButton_Click"/>
                <Button Content="Beenden"
                        Margin="5,0"
                        Click="BeendenButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
