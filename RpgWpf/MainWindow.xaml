<Window x:Class="RpgWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPG WPF"
        Width="1100"
        Height="800"
        MinWidth="950"
        MinHeight="700">

    <Window.Resources>

        <!-- Gemeinsamer Stil für alle GroupBoxen (Rahmen und Überschriftgröße) -->
        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- Gemeinsamer Stil für Haupt-Buttons (rechts unten) -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#FF4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="180"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1E6CC7"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0F4C94"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Stil für Shop-Buttons (minimal kleiner, andere Farbe) -->
        <Style x:Key="ShopButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="170"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Background" Value="#FF7AB6F2"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Hauptlayout:
         Row 0: Character / Enemy / Shop
         Row 1: Übersicht aller Enemies
         Row 2: Inventory / Game log / Buttons -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ======================= -->
        <!--        Row 0: Top       -->
        <!-- ======================= -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Character-Box (links) -->
            <GroupBox Grid.Column="0"
                      Margin="0,0,10,5">
                <GroupBox.Header>
                    <TextBlock Text="Character"/>
                </GroupBox.Header>

                <StackPanel Margin="10">
                    <!-- Basisdaten -->
                    <TextBlock Text="{Binding PlayerTag, StringFormat=Player tag: {0}}"/>
                    <TextBlock Text="{Binding Alter, StringFormat=Age: {0}}"
                               Margin="0,5,0,0"/>

                    <!-- Level und Erfahrung -->
                    <TextBlock Text="{Binding Level, StringFormat=Level: {0}}"
                               Margin="0,5,0,0"/>
                    <TextBlock Margin="0,0,0,5">
                        <Run Text="EXP: "/>
                        <Run Text="{Binding CurrentExp}"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding ExpToNextLevel}"/>
                    </TextBlock>

                    <Separator Margin="0,5,0,5"/>

                    <!-- Lebenspunkte und Angriff -->
                    <TextBlock Text="{Binding HP, StringFormat=Health Points: {0}}"/>
                    <TextBlock Text="{Binding MaxHP, StringFormat=Max. Health: {0}}"/>
                    <TextBlock Text="{Binding AttackDamage, StringFormat=Attack damage: {0}}"
                               Margin="0,5,0,0"/>

                    <Separator Margin="0,5,0,5"/>

                    <!-- Spezialangriff -->
                    <TextBlock Text="{Binding DamageMultiplier, StringFormat=Multiplier (Special): {0}x}"/>
                    <TextBlock Text="{Binding SpecialAttackDamage, StringFormat=Special attack damage: {0}}"/>
                    <TextBlock Text="{Binding SpecialProbability, StringFormat=Special chance: {0:P0}}"/>
                </StackPanel>
            </GroupBox>

            <!-- Enemy-Box (Mitte) -->
            <GroupBox Header="Enemy"
                      Grid.Column="1"
                      Margin="0,0,10,5">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding CurrentEnemyName, StringFormat=Name: {0}}"/>
                    <TextBlock Text="{Binding CurrentEnemyHP, StringFormat=HP: {0}}"
                               Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding CurrentEnemyMaxHP, StringFormat=Max. HP: {0}}"/>
                    <TextBlock Text="{Binding CurrentEnemyAttack, StringFormat=Attack: {0}}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Shop-Box (rechts) -->
            <GroupBox Header="Shop"
                      Grid.Column="2"
                      Margin="0,0,0,5">
                <StackPanel Margin="10">

                    <!-- Anzeige der aktuellen Währung und Werte -->
                    <TextBlock Text="{Binding Coins, StringFormat=Coins: {0}}"/>
                    <Separator Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding AttackDamage, StringFormat=Current attack: {0}}"/>
                    <TextBlock Text="{Binding MaxHP, StringFormat=Max health: {0}}"/>

                    <Separator Margin="0,10,0,10"/>

                    <!-- Upgrades -->
                    <TextBlock Text="Upgrades"
                               FontWeight="Bold"
                               Margin="0,0,0,4"/>

                    <Button Content="Increase attack (+2) – 20 Coins"
                            Style="{StaticResource ShopButtonStyle}"
                            Margin="0,2,0,2"
                            Click="BuyAttackButton_Click"/>

                    <Button Content="Increase max health (+20) – 15 Coins"
                            Style="{StaticResource ShopButtonStyle}"
                            Margin="0,2,0,8"
                            Click="BuyHealthButton_Click"/>

                    <Separator Margin="0,4,0,8"/>

                    <!-- Potions -->
                    <TextBlock Text="Potions"
                               FontWeight="Bold"
                               Margin="0,0,0,4"/>

                    <Button Content="Heal Potion I – 12 Coins"
                            Style="{StaticResource ShopButtonStyle}"
                            Margin="0,2,0,2"
                            Click="BuyHealPotion1Button_Click"/>

                    <Button Content="Heal Potion II – 20 Coins"
                            Style="{StaticResource ShopButtonStyle}"
                            Margin="0,2,0,8"
                            Click="BuyHealPotion2Button_Click"/>

                    <Button Content="Poison Potion I – 10 Coins"
                            Style="{StaticResource ShopButtonStyle}"
                            Margin="0,2,0,2"
                            Click="BuyPoisonPotion1Button_Click"/>

                    <Button Content="Poison Potion II – 18 Coins"
                            Style="{StaticResource ShopButtonStyle}"
                            Margin="0,2,0,2"
                            Click="BuyPoisonPotion2Button_Click"/>

                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- ================================== -->
        <!--       Row 1: Enemy-Übersicht       -->
        <!-- ================================== -->
        <GroupBox Header="Enemies"
                  Grid.Row="1"
                  Margin="0,0,0,5">
            <!-- Horizontale Liste aller Gegner mit Name und HP/MaxHP -->
            <ListBox x:Name="EnemiesList"
                     ItemsSource="{Binding Enemies}"
                     SelectedItem="{Binding SelectedEnemy, Mode=TwoWay}"
                     BorderThickness="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8"
                                Margin="4"
                                CornerRadius="4"
                                BorderBrush="Gray"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="Bold"/>
                                <TextBlock>
                                    <Run Text="HP: "/>
                                    <Run Text="{Binding HP, Mode=OneWay}"/>
                                    <Run Text=" / "/>
                                    <Run Text="{Binding MaxHP, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- ================================== -->
        <!--   Row 2: Inventory / Game log /   -->
        <!--           Buttons                  -->
        <!-- ================================== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Inventory -->
                <ColumnDefinition Width="2*"/>
                <!-- Game log -->
                <ColumnDefinition Width="2*"/>
                <!-- Buttons -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Inventory (links unten) -->
            <GroupBox Header="Inventory"
                      Grid.Column="0"
                      Margin="0,0,10,0">
                <Grid>
                    <ListBox x:Name="InventoryList"
                             ItemsSource="{Binding InventoryItems}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ItemName}"/>
                                    <TextBlock Text=" ("/>
                                    <TextBlock Text="{Binding InventarGroesse}"/>
                                    <TextBlock Text=")"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>

            <!-- Game-Log (mittig unten) -->
            <GroupBox Header="Game log"
                      Grid.Column="1"
                      Margin="0,0,10,0">
                <Grid>
                    <TextBox x:Name="GameLog"
                             Margin="5"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </GroupBox>

            <!-- Buttons (rechts unten) -->
            <StackPanel Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button x:Name="AttackButton"
                        Content="Attack"
                        Width="200"
                        Margin="0,4,0,4"
                        Click="AttackButton_Click"/>

                <Button x:Name="UsePotionButton"
                        Content="Use potion"
                        Width="200"
                        Margin="0,4,0,4"
                        Click="UsePotionButton_Click"/>

                <!-- Optische Trennung zwischen Kampf- und Verwaltungsfunktionen -->
                <Separator Margin="0,8,0,8"
                           Width="200"
                           Height="3"
                           Background="Gray"/>

                <Button x:Name="AdminMenuButton"
                        Content="Admin menu"
                        Width="200"
                        Margin="0,4,0,4"
                        Click="AdminMenuButton_Click"/>

                <Button x:Name="ExitButton"
                        Content="Exit game"
                        Width="200"
                        Margin="0,4,0,4"
                        Click="ExitButton_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
